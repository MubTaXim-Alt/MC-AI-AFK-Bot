{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@bot/*": ["./bot/*"]
    },
    "baseUrl": "."
  },
  "include": ["bot/**/*.ts", "server.ts"],
  "exclude": ["node_modules", "src", "dist/src", "vite.config.ts", "public"]
}
